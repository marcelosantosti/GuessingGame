<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcelosantos.guessinggame" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".GuessingGameApplication">
        <meta-data android:name="roboguice.modules" android:value="com.marcelosantos.guessinggame.GuessingGameModule"/>
        <activity
            android:name=".userinterface.activity.MainActivity_"
            android:label="@string/app_name"
            android:theme="@style/BaseTheme"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
